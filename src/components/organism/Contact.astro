<article>
	<form>
		<div class='form-small-wrapper'>
			<div class='form-radio-wrapper'>
				<div class='form-radio'>
					<input type='radio' id='hi' name='test' value='hi' />
					<label for='hi'>Say Hi!</label>
				</div>
				<div class='form-radio'>
					<input type='radio' id='quote' name='test' value='quote' />
					<label for='quote'>Get a Quote</label>
				</div>
			</div>
			<div class='form-input-wrapper'>
				<div class='form-input'>
					<label for='name'>Name</label>
					<input type='text' id='name' placeholder='Name' />
				</div>
				<div class='form-input'>
					<label for='email'>Email*</label>
					<input type='email' id='email' placeholder='Email' />
				</div>
				<div class='form-input'>
					<label for='message'>Message*</label>
					<textarea id='message' placeholder='Message'></textarea>
				</div>
			</div>
		</div>
		<button class='form-button'>Send Message</button>
	</form>
	<img src='/assets/hero3.svg' />
</article>

<style scoped>
	article {
		width: 100%;
		@media (--size-md) {
			position: relative;
			display: flex;
			flex-direction: row;
			background-color: var(--color-grey);
			border-radius: var(--border-radius-lg);
			padding: 60px 60px 80px 100px;
		}
	}
	form {
		max-width: 55%;
		flex-grow: 1;
	}
	img {
		display: none;
		@media (--size-md) {
			position: absolute;
			right: 0;
			display: block;
		}
	}
	.form-small-wrapper {
		width: 100%;
		border-radius: var(--border-radius-lg);
		padding: 40px 30px;
		background-color: var(--color-grey);
		display: flex;
		flex-direction: column;
		@media (--size-md) {
			padding: unset;
		}
	}
	.form-radio-wrapper {
		display: flex;
		align-items: center;
		justify-content: space-around;
		margin-bottom: 36px;
	}
	.form-input-wrapper {
		display: flex;
		flex-direction: column;
		gap: 20px;
	}
	.form-radio {
		display: flex;
		align-items: center;
		gap: 15px;

		input[type='radio'] {
			box-sizing: border-box;
			width: 28px;
			height: 28px;
			border: 1px solid var(--color-black);
			border-radius: 50%;
			appearance: none;
			background-color: transparent;
			outline: none;
		}
		input[type='radio']:not(:disabled):checked {
			border-color: var();
			background-color: var(--color-green);
			background-clip: content-box;
			padding: 6px;
		}
	}
	.form-input {
		display: flex;
		flex-direction: column;
		gap: 10px;
		input,
		textarea {
			resize: none;
			padding: 10px 20px;
			border-radius: var(--border-radius-md);
			border: 1px solid var(--color-black);
		}
	}
	.form-button {
		margin-top: 30px;
		width: 100%;
		color: var(--color-white);
		background-color: var(--color-dark);
		border-radius: var(--border-radius-md);
		padding: 20px 35px;
		text-align: center;
		border-width: 0;
		&:hover {
			color: var(--color-black);
			background-color: var(--color-green);
		}
	}
	#message {
		display: flex;
		height: 180px;
		text-align: start;
	}
</style>
