---
import { PARTNERS } from '@/data/index';
---

<section>
	{
		PARTNERS.map((partner) => (
			<img src={partner.path} height='48px' alt={`${partner.title} logo`} />
		))
	}
</section>
<style scoped>
	section {
		margin-block: 60px;
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		row-gap: 20px;
		column-gap: 37px;
		@media (--size-md) {
			display: flex;
			align-items: center;
			justify-content: space-between;
			flex-wrap: wrap;
			gap: 37px;
		}
	}
	img {
		filter: grayscale(100%);
	}
</style>
